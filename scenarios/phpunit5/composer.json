{
    "name": "greg-1-anderson/starter",
    "description": "Template project for PHP libraries.",
    "license": "MIT",
    "authors": [
        {
            "name": "Greg Anderson",
            "email": "greg.1.anderson@greenknowe.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "Starter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Starter\\": "tests/src"
        }
    },
    "require": {
        "php": ">=5.5.0",
        "knplabs/github-api": "^2.7",
        "php-http/guzzle6-adapter": "^1.1",
        "symfony/filesystem": "^2.8|^3|^4",
        "symfony/finder": "^2.8|^3|^4"
    },
    "require-dev": {
        "g-1-a/composer-test-scenarios": "^1",
        "phpunit/phpunit": "^5",
        "satooshi/php-coveralls": "^2",
        "squizlabs/php_codesniffer": "^2.8"
    },
    "scripts": {
        "experiment": [
            "CustomizeProject\\Customizer::experiment"
        ],
        "cs": "phpcs --standard=PSR2 -n src",
        "cbf": "phpcbf --standard=PSR2 -n src",
        "unit": "phpunit --colors=always",
        "lint": [
            "find src -name '*.php' -print0 | xargs -0 -n1 php -l",
            "find tests/src -name '*.php' -print0 | xargs -0 -n1 php -l"
        ],
        "test": [
            "@lint",
            "@unit",
            "@cs"
        ],
        "scenario": "scenarios/install",
        "xxx-post-install-cmd": [
            "@customize"
        ],
        "post-update-cmd": [
            "create-scenario phpunit5 'phpunit/phpunit:^5' --platform-php '5.6'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "5.6"
        },
        "vendor-dir": "../../vendor"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "minimum-stability": "stable"
}
